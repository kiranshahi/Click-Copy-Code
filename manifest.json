{
  "name": "Click Copy {Code} â€“ One-Click Copy",
  "version": "0.0.3",
  "author": "Kiran Shahi",
  "homepage_url": "https://github.com/kiranshahi/Click-Copy-Code",
  "description": "Software engineer's friend. Copy code from any website with a single click.",
  "icons": {
    "16": "images/curly-brackets-16.png",
    "32": "images/curly-brackets-32.png",
    "48": "images/curly-brackets-64.png",
    "128": "images/curly-brackets-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "css": [ "style.css" ],
      "js": [ "script.js" ],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "manifest_version": 3
}
